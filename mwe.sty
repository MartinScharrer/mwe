% Load \pkg{graphicx} package and add "-example" suffix
% to all extensions.
%    \begin{macrocode}
\RequirePackage{graphicx}
\let\@gtempb\@gobble
\@for\@gtempa:=\Gin@extensions\do{%
    \edef\@tempa{{-example\@gtempa}{\@gtempa}{*}{}}%
    \expandafter\DeclareGraphicsRule\@tempa
    \edef\@gtempb{\@gtempb,-example\@gtempa}%
}
\edef\Gin@extensions{\@gtempb,\Gin@extensions}
\let\@gtempa\relax
\let\@gtempb\relax
\let\@tempc\relax
